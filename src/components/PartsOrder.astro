---
import SpecSheetModal from "./SpecSheetModal.astro";

export interface Props {
  part: {
    name: string;
    sku: string;
    price: string;
    description: string;
  };
  equipment: string;
}

const { part, equipment } = Astro.props;
---

<div class="parts-order space-y-4 slide-up" data-sku={part.sku} data-equipment={equipment}>
  <!-- Quantity Selector -->
  <div class="flex items-center space-x-2">
    <label class="text-sm font-medium text-slate-700">Quantity:</label>
    <select id={`quantity-${part.sku}`} class="px-2 py-1 border border-slate-300 rounded text-sm">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="10">10</option>
    </select>
  </div>

  <!-- Order Buttons -->
  <div class="space-y-2">
    <button
      id={`quote-btn-${part.sku}`}
      class="w-full px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 text-sm font-medium btn-enhanced"
    >
      📋 Get Quote
    </button>
    
    <div class="text-xs text-slate-500 text-center mb-2">Or order directly from:</div>
    
    <div class="grid grid-cols-2 gap-2">
      <button
        class="partstown-btn px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-xs btn-enhanced"
        data-sku={part.sku}
      >
        🏪 PartsTown
      </button>
      <button
        class="general-parts-btn px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-xs btn-enhanced"
        data-sku={part.sku}
      >
        🔧 General Parts
      </button>
      <button
        class="partsfps-btn px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-xs btn-enhanced"
        data-sku={part.sku}
      >
        ⚡ PartsFPS
      </button>
      <button
        class="emrco-btn px-3 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-xs btn-enhanced"
        data-sku={part.sku}
      >
        🏭 EMRCO
      </button>
    </div>
  </div>

  <!-- Quote Confirmation (hidden by default) -->
  <div id={`quote-confirm-${part.sku}`} class="hidden p-3 bg-green-50 border border-green-200 rounded-lg">
    <div class="flex items-center space-x-2">
      <span class="text-green-600">✅</span>
      <span class="text-sm font-medium text-green-800">
        Quote added! Check your cart for details.
      </span>
    </div>
  </div>

  <!-- Spec Sheet Button -->
  <button 
    class="spec-sheet-btn w-full px-3 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 text-sm btn-enhanced"
    data-sku={part.sku}
  >
    📄 Spec Sheet
  </button>
</div>

<!-- Spec Sheet Modal -->
<SpecSheetModal part={part} />

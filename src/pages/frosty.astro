---
import BaseLayout from "../layouts/BaseLayout.astro";
import DocsButtons from "../components/DocsButtons.astro";
import SectionCard from "../components/SectionCard.astro";
---

<BaseLayout>
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-fuchsia-500 to-violet-600 rounded-xl flex items-center justify-center text-3xl">üç¶</div>
      <div>
        <h1 class="text-4xl font-bold text-slate-100 md:text-slate-900">Frosty Soft-Serve</h1>
        <p class="text-lg text-slate-400 md:text-slate-600">Cleaning, operation, and troubleshooting</p>
      </div>
    </div>
  </div>

  <DocsButtons id="frosty" />

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    <div class="lg:col-span-2 bg-white rounded-xl shadow p-6">
      <h2 class="text-2xl font-bold mb-4">Cleaning Schedule</h2>
      <ul class="list-disc pl-6 space-y-2 text-slate-700">
        <li>Daily: Rinse, sanitize, lube seals and O-rings</li>
        <li>Weekly: Full teardown, soak parts, inspect beater</li>
        <li>Monthly: Replace wearable seals and gaskets</li>
      </ul>
    </div>
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-lg font-semibold mb-3">Operating Specs</h3>
      <div class="space-y-2 text-slate-700">
        <div class="flex justify-between"><span>Draw Temp</span><span class="font-medium">18¬∞F</span></div>
        <div class="flex justify-between"><span>Viscosity</span><span class="font-medium">Target 220</span></div>
        <div class="flex justify-between"><span>Hopper Temp</span><span class="font-medium">36¬∞F</span></div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow p-6" id="troubleshooting">
    <h3 class="text-xl font-bold mb-4">Troubleshooting</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <div class="font-medium mb-1">Product Too Soft</div>
        <ul class="list-disc pl-6 text-sm">
          <li>Increase viscosity setting</li>
          <li>Verify mix temperature</li>
          <li>Check beater motor amps</li>
        </ul>
      </div>
      <div>
        <div class="font-medium mb-1">Won't Freeze</div>
        <ul class="list-disc pl-6 text-sm">
          <li>Check refrigeration pressures</li>
          <li>Clean condenser coil</li>
          <li>Verify mix in hopper</li>
        </ul>
      </div>
    </div>
  </div>

  <SectionCard title="Wiring Diagram">
    <div class="bg-white p-4 rounded-lg border border-slate-200 overflow-hidden">
      <div class="w-full max-w-4xl mx-auto">
        <img src="/diagrams/frosty.svg" alt="Frosty machine detailed wiring diagram showing compressor, mixer motor, pump, and control systems" class="w-full h-auto rounded" style="max-height: 500px; object-fit: contain;" />
      </div>
      <div class="mt-4 text-sm text-slate-600">
        <p class="font-medium mb-2">System Specifications:</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p>‚Ä¢ <span class="font-medium">Power:</span> 115V AC, 60Hz, 5.5A</p>
            <p>‚Ä¢ <span class="font-medium">Compressor:</span> 1/3 HP, R-134a refrigerant</p>
            <p>‚Ä¢ <span class="font-medium">Capacity:</span> 2.5 gallons</p>
          </div>
          <div>
            <p>‚Ä¢ <span class="font-medium">Mix Ratio:</span> 5:1 water to mix</p>
            <p>‚Ä¢ <span class="font-medium">Mixer Motor:</span> 115V AC</p>
            <p>‚Ä¢ <span class="font-medium">Control:</span> Freeze control & mix ratio</p>
          </div>
        </div>
      </div>
    </div>
  </SectionCard>
</BaseLayout>

---

<BaseLayout title={`${currentParts.title} - LTC Kitchen`} description="Genuine replacement parts and components for commercial kitchen equipment">
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center text-3xl">
        {currentParts.icon}
      </div>
      <div>
        <h1 class="text-3xl font-bold text-slate-900">{currentParts.title}</h1>
        <p class="text-slate-600">Genuine replacement parts and components</p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    {currentParts.parts.map((part) => (
      <div class="bg-white rounded-xl shadow p-6 border">
        <h3 class="text-lg font-bold text-slate-900 mb-2">{part.name}</h3>
        <p class="text-sm text-slate-600 mb-3">{part.description}</p>
        
        <div class="space-y-2 mb-4">
          <div class="flex justify-between">
            <span class="text-sm font-medium text-slate-700">SKU:</span>
            <span class="font-mono text-sm text-slate-900">{part.sku}</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sm font-medium text-slate-700">Price:</span>
            <span class="font-bold text-green-600">{part.price}</span>
          </div>
        </div>
        
        <PartsOrder part={part} equipment={currentParts.title} />
      </div>
    ))}
  </div>

  <!-- Enhanced Parts & Service Section with React -->
  <PartsServiceSection client:load />
</BaseLayout>
---
import BaseLayout from "../layouts/BaseLayout.astro";
import DocsButtons from "../components/DocsButtons.astro";
import SectionCard from "../components/SectionCard.astro";
import TroubleshootingDropdown from "../components/TroubleshootingDropdown.astro";

const status = "operational";

const troubleshootingIssues = [
  {
    problem: "Not cooling properly",
    solution: "Check refrigeration system and glycol levels",
    steps: [
      "Verify compressor operation and pressures",
      "Check glycol concentration (should be 35-40%)",
      "Clean condenser coils thoroughly",
      "Inspect for refrigerant leaks"
    ]
  },
  {
    problem: "Pump making noise",
    solution: "Air in system or pump bearing wear",
    steps: [
      "Purge air from glycol lines",
      "Check glycol reservoir level",
      "Inspect pump coupling alignment",
      "Lubricate pump bearings if accessible"
    ]
  },
  {
    problem: "Temperature fluctuating",
    solution: "Controller or sensor issue",
    steps: [
      "Calibrate temperature controller",
      "Check sensor placement and wiring",
      "Verify differential settings",
      "Test sensor resistance values"
    ]
  },
  {
    problem: "High head pressure",
    solution: "Poor heat rejection or overcharge",
    steps: [
      "Clean condenser coils and fan",
      "Check ambient temperature conditions",
      "Verify proper refrigerant charge",
      "Inspect condenser fan operation"
    ]
  }
];
const currentTemp = 29;
const setpoint = 29;
const differential = 2;
const glycolConcentration = 35;
const pumpMode = "AUTO";
const lastMaintenance = "2024-01-15";
const nextMaintenance = "2024-04-15";
---

<BaseLayout title="Perlick Chiller - LTC Kitchen" description="Monitor and control the Perlick 4420-2 Glycol Chiller system">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center text-3xl">
        üç∫
      </div>
      <div>
        <h1 class="text-4xl font-bold text-slate-900">Perlick 4420-2 Glycol Chiller</h1>
        <p class="text-lg text-slate-600">Professional glycol chiller system for beverage dispensing</p>
      </div>
    </div>
    
    <!-- Status Badge -->
    <div class="flex items-center space-x-4">
      <span class="px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-medium">
        ‚úÖ Operational
      </span>
      <span class="text-sm text-slate-600">Last updated: {new Date().toLocaleTimeString()}</span>
    </div>
  </div>

  <DocsButtons id="perlick" />

  <!-- Main Dashboard Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    <!-- Temperature Status -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
        <h2 class="text-2xl font-bold text-slate-900 mb-6 flex items-center">
          <span class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">üå°Ô∏è</span>
          Temperature Control
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="text-center">
            <div class="text-4xl font-bold text-blue-600 mb-2">{currentTemp}¬∞F</div>
            <div class="text-sm text-slate-600">Current Temperature</div>
            <div class="w-full bg-slate-200 rounded-full h-2 mt-3">
              <div class="bg-blue-600 h-2 rounded-full" style={`width: ${((currentTemp - 20) / 20) * 100}%`}></div>
            </div>
          </div>
          
          <div class="space-y-4">
            <div class="flex justify-between items-center p-3 bg-slate-50 rounded-lg">
              <span class="text-slate-600">Setpoint</span>
              <span class="font-semibold text-slate-900">{setpoint}¬∞F</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-slate-50 rounded-lg">
              <span class="text-slate-600">Differential</span>
              <span class="font-semibold text-slate-900">{differential}¬∞F</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-slate-50 rounded-lg">
              <span class="text-slate-600">Glycol Concentration</span>
              <span class="font-semibold text-slate-900">{glycolConcentration}%</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- System Status -->
    <div class="space-y-6">
      <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">System Status</h3>
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <span class="text-slate-600">Pump Mode</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">{pumpMode}</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-600">Compressor</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Running</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-600">Alarms</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">None</span>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">Maintenance</h3>
        <div class="space-y-3">
          <div>
            <div class="text-sm text-slate-600">Last Service</div>
            <div class="font-medium text-slate-900">{lastMaintenance}</div>
          </div>
          <div>
            <div class="text-sm text-slate-600">Next Service</div>
            <div class="font-medium text-slate-900">{nextMaintenance}</div>
          </div>
          <div class="pt-2">
            <div class="w-full bg-slate-200 rounded-full h-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: 75%"></div>
            </div>
            <div class="text-xs text-slate-600 mt-1">75% to next service</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Control Instructions -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
      <h3 class="text-xl font-bold text-slate-900 mb-4 flex items-center">
        <span class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-3">üéõÔ∏è</span>
        Controller Menu
      </h3>
      <div class="space-y-4">
        <div class="flex items-start space-x-3">
          <div class="w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">1</div>
          <div>
            <div class="font-medium text-slate-900">Enter Setup Mode</div>
            <div class="text-sm text-slate-600">Hold <kbd class="px-2 py-1 bg-slate-100 rounded text-xs font-mono">SET</kbd> for 3‚Äì5 seconds</div>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <div class="w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">2</div>
          <div>
            <div class="font-medium text-slate-900">Navigate Settings</div>
            <div class="text-sm text-slate-600">Use <kbd class="px-2 py-1 bg-slate-100 rounded text-xs font-mono">‚ñ≤</kbd> / <kbd class="px-2 py-1 bg-slate-100 rounded text-xs font-mono">‚ñº</kbd> to browse</div>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <div class="w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">3</div>
          <div>
            <div class="font-medium text-slate-900">Save Changes</div>
            <div class="text-sm text-slate-600">Press <kbd class="px-2 py-1 bg-slate-100 rounded text-xs font-mono">SET</kbd> to save</div>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <div class="w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold">4</div>
          <div>
            <div class="font-medium text-slate-900">Exit Setup</div>
            <div class="text-sm text-slate-600">Wait 15 seconds to automatically exit</div>
          </div>
        </div>
      </div>
    </div>

    <SectionCard title="Troubleshooting" id="troubleshooting">
      <TroubleshootingDropdown issues={troubleshootingIssues} />
      
      <div class="mt-6">
        <h4 class="font-bold mb-3">System Alerts:</h4>
        <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex items-start space-x-3">
            <div class="text-red-600 text-lg">‚ö†Ô∏è</div>
            <div>
              <div class="font-medium text-red-900">Low Charge Detected</div>
              <div class="text-sm text-red-700 mt-1">Suction measured 6‚Äì7 psig ‚Üí starved evaporator (low charge)</div>
            </div>
          </div>
        </div>
      </div>
    </SectionCard>
  </div>

  <SectionCard title="Wiring Diagram">
    <img src="/diagrams/perlick.png" alt="Perlick wiring diagram placeholder" class="w-full rounded border" />
  </SectionCard>

  <!-- Quick Actions -->
  <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl p-6 border border-blue-200">
    <h3 class="text-lg font-semibold text-slate-900 mb-4">Quick Actions</h3>
    <div class="flex flex-wrap gap-3">
      <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
        üìä View History
      </button>
      <button class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium">
        üîß Schedule Service
      </button>
      <button class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
        üì± Mobile Control
      </button>
      <button class="px-4 py-2 bg-slate-600 text-white rounded-lg hover:bg-slate-700 transition-colors text-sm font-medium">
        ‚öôÔ∏è Settings
      </button>
    </div>
  </div>
</BaseLayout>

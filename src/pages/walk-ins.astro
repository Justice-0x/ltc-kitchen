---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionCard from "../components/SectionCard.astro";
import TroubleshootingDropdown from "../components/TroubleshootingDropdown.astro";

const troubleshootingIssues = [
  {
    problem: "Temperature Not Maintaining",
    solutions: [
      "Check door seals and gaskets",
      "Verify evaporator coils are clean", 
      "Test thermostat calibration",
      "Inspect refrigerant levels",
      "Check condenser fan operation"
    ]
  },
  {
    problem: "Excessive Frost Buildup",
    solutions: [
      "Check defrost timer operation",
      "Test defrost heaters",
      "Verify defrost termination switch",
      "Inspect door seals for leaks",
      "Check humidity levels"
    ]
  },
  {
    problem: "Compressor Won't Start",
    solutions: [
      "Check electrical connections",
      "Test start capacitor",
      "Verify thermostat operation",
      "Check overload protection",
      "Inspect contactor operation"
    ]
  }
];
---

<BaseLayout title="Walk-In Coolers - LTC Kitchen" description="Walk-in cooler and freezer systems monitoring and maintenance">
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-xl flex items-center justify-center text-3xl">
        🚪
      </div>
      <div>
        <h1 class="text-3xl font-bold text-slate-900">Walk-In Coolers & Freezers</h1>
        <p class="text-slate-600">Professional refrigeration systems</p>
      </div>
    </div>
    
    <div class="flex items-center space-x-4 mb-6">
      <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">✓ Operational</span>
      <span class="text-sm text-slate-500">Last updated: {new Date().toLocaleTimeString()}</span>
    </div>

    <div class="flex space-x-3 mb-8">
      <a href="/manuals/walk-ins" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
        📄 Manual
      </a>
      <a href="/parts/walk-ins" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium">
        🔧 Parts
      </a>
      <a href="#troubleshooting" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm font-medium">
        🚨 Troubleshooting
      </a>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Temperature Control -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
      <h3 class="text-lg font-semibold text-slate-900 mb-4 flex items-center">
        <span class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">🌡️</span>
        Temperature Control
      </h3>
      
      <div class="space-y-4">
        <div>
          <div class="flex justify-between items-center mb-2">
            <span class="text-2xl font-bold text-blue-600">35°F</span>
            <span class="text-sm text-slate-600">Cooler Setpoint</span>
            <span class="text-lg font-semibold">38°F</span>
          </div>
          <div class="w-full bg-slate-200 rounded-full h-2 mb-2">
            <div class="bg-blue-600 h-2 rounded-full" style="width: 75%"></div>
          </div>
        </div>
        
        <div>
          <div class="flex justify-between items-center mb-2">
            <span class="text-2xl font-bold text-cyan-600">-5°F</span>
            <span class="text-sm text-slate-600">Freezer Setpoint</span>
            <span class="text-lg font-semibold">-2°F</span>
          </div>
          <div class="w-full bg-slate-200 rounded-full h-2 mb-2">
            <div class="bg-cyan-600 h-2 rounded-full" style="width: 85%"></div>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4 mt-4">
          <div class="text-center p-3 bg-slate-50 rounded-lg">
            <div class="text-sm text-slate-600">Differential</div>
            <div class="font-semibold">3°F</div>
          </div>
          <div class="text-center p-3 bg-slate-50 rounded-lg">
            <div class="text-sm text-slate-600">Humidity</div>
            <div class="font-semibold">85%</div>
          </div>
        </div>
      </div>
    </div>

    <!-- System Status -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
      <h3 class="text-lg font-semibold text-slate-900 mb-4">System Status</h3>
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-slate-700">Compressor</span>
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">Running</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-700">Evaporator Fans</span>
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">Auto</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-700">Defrost Cycle</span>
          <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">Standby</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-700">Door Alarms</span>
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">None</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-700">Refrigerant</span>
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">R-404A</span>
        </div>
      </div>

      <div class="mt-6 pt-4 border-t border-slate-200">
        <h4 class="font-semibold text-slate-900 mb-3">Maintenance</h4>
        <div class="space-y-2">
          <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600">Last Service</span>
            <span class="text-sm font-medium">2024-01-15</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600">Next Service</span>
            <span class="text-sm font-medium">2024-04-15</span>
          </div>
          <div class="w-full bg-slate-200 rounded-full h-2 mt-2">
            <div class="bg-blue-600 h-2 rounded-full" style="width: 75%"></div>
          </div>
          <div class="text-xs text-slate-500 text-center">75% to next service</div>
        </div>
      </div>
    </div>
  </div>

  <SectionCard title="Troubleshooting" id="troubleshooting">
    <TroubleshootingDropdown issues={troubleshootingIssues} />
    
    <div class="mt-6">
      <h4 class="font-bold mb-3">System Alerts:</h4>
      <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
        <div class="flex items-start space-x-3">
          <div class="text-green-600 text-lg">✅</div>
          <div>
            <div class="font-medium text-green-900">All Systems Normal</div>
            <div class="text-sm text-green-700 mt-1">Walk-in systems operating within normal parameters</div>
          </div>
        </div>
      </div>
    </div>
  </SectionCard>

  <SectionCard title="Wiring Diagram">
    <div class="bg-white p-4 rounded-lg border border-slate-200 overflow-hidden">
      <div class="w-full max-w-4xl mx-auto">
        <img src="/diagrams/walk-ins.svg" alt="Walk-in cooler detailed wiring diagram showing compressor, evaporator fans, defrost systems, and temperature controls" class="w-full h-auto rounded" style="max-height: 500px; object-fit: contain;" />
      </div>
      <div class="mt-4 text-sm text-slate-600">
        <p class="font-medium mb-2">System Components:</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p>• <span class="font-medium">Compressor:</span> 3HP, R-404A refrigerant</p>
            <p>• <span class="font-medium">Evaporator:</span> Low-temperature coils</p>
            <p>• <span class="font-medium">Defrost:</span> Electric defrost system</p>
          </div>
          <div>
            <p>• <span class="font-medium">Controls:</span> Digital temperature controller</p>
            <p>• <span class="font-medium">Safety:</span> High/low pressure switches</p>
            <p>• <span class="font-medium">Power:</span> 208-230V/3Ph, 60Hz</p>
          </div>
        </div>
      </div>
    </div>
  </SectionCard>

  <!-- Quick Actions -->
  <div class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-xl p-6 border border-blue-200">
    <h3 class="text-lg font-semibold text-slate-900 mb-4">Quick Actions</h3>
    <div class="flex flex-wrap gap-3">
      <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
        📊 View History
      </button>
      <button class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium">
        🔧 Schedule Service
      </button>
      <button class="px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors text-sm font-medium">
        🚨 Force Defrost
      </button>
      <button class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
        📈 Temperature Logs
      </button>
    </div>
  </div>
</BaseLayout>

---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionCard from "../components/SectionCard.astro";
import TroubleshootingDropdown from "../components/TroubleshootingDropdown.astro";

const troubleshootingIssues = [
  {
    problem: "Temperature Not Maintaining",
    solutions: [
      "Check glycol concentration levels",
      "Inspect pump operation and flow rate",
      "Clean condenser coils",
      "Verify thermostat calibration",
      "Check for refrigerant leaks"
    ]
  },
  {
    problem: "Glycol Leak",
    solutions: [
      "Inspect all fittings and connections",
      "Check tubing for cracks or damage",
      "Verify pump seal integrity",
      "Test pressure relief valve",
      "Replace damaged gaskets"
    ]
  },
  {
    problem: "Poor Cooling Performance",
    solutions: [
      "Check glycol mixture ratio (35-40%)",
      "Clean heat exchanger coils",
      "Verify proper airflow",
      "Check compressor operation",
      "Inspect evaporator for frost buildup"
    ]
  }
];
---

<BaseLayout title="Perlick Low Boys - LTC Kitchen" description="Perlick low boy glycol chiller systems">
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-amber-500 to-orange-600 rounded-xl flex items-center justify-center text-3xl">
        üç∫
      </div>
      <div>
        <h1 class="text-3xl font-bold text-slate-900">Perlick Low Boy Glycol Chillers</h1>
        <p class="text-slate-600">Under-counter beverage dispensing systems</p>
      </div>
    </div>
    
    <div class="flex items-center space-x-4 mb-6">
      <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">‚úì Operational</span>
      <span class="text-sm text-slate-500">Last updated: {new Date().toLocaleTimeString()}</span>
    </div>

    <div class="flex space-x-3 mb-8">
      <a href="/manuals/perlick-lowboys" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
        üìÑ Manual
      </a>
      <a href="/parts/perlick-lowboys" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium">
        üîß Parts
      </a>
      <a href="#troubleshooting" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm font-medium">
        üö® Troubleshooting
      </a>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Glycol System Control -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
      <h3 class="text-lg font-semibold text-slate-900 mb-4 flex items-center">
        <span class="w-8 h-8 bg-amber-100 rounded-lg flex items-center justify-center mr-3">üå°Ô∏è</span>
        Glycol System Control
      </h3>
      
      <div class="space-y-4">
        <div>
          <div class="flex justify-between items-center mb-2">
            <span class="text-2xl font-bold text-amber-600">28¬∞F</span>
            <span class="text-sm text-slate-600">Glycol Temperature</span>
            <span class="text-lg font-semibold">30¬∞F</span>
          </div>
          <div class="w-full bg-slate-200 rounded-full h-2 mb-2">
            <div class="bg-amber-600 h-2 rounded-full" style="width: 85%"></div>
          </div>
        </div>

        <div class="grid grid-cols-3 gap-4 mt-4">
          <div class="text-center p-3 bg-slate-50 rounded-lg">
            <div class="text-sm text-slate-600">Setpoint</div>
            <div class="font-semibold">30¬∞F</div>
          </div>
          <div class="text-center p-3 bg-slate-50 rounded-lg">
            <div class="text-sm text-slate-600">Flow Rate</div>
            <div class="font-semibold">2.5 GPM</div>
          </div>
          <div class="text-center p-3 bg-slate-50 rounded-lg">
            <div class="text-sm text-slate-600">Concentration</div>
            <div class="font-semibold">38%</div>
          </div>
        </div>
      </div>
    </div>

    <!-- System Status -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
      <h3 class="text-lg font-semibold text-slate-900 mb-4">System Status</h3>
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-slate-700">Glycol Pump</span>
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">Running</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-700">Compressor</span>
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">Auto</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-700">Condenser Fan</span>
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">Running</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-700">System Pressure</span>
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">Normal</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-700">Alarms</span>
          <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">None</span>
        </div>
      </div>

      <div class="mt-6 pt-4 border-t border-slate-200">
        <h4 class="font-semibold text-slate-900 mb-3">Performance</h4>
        <div class="space-y-2">
          <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600">Lines Served</span>
            <span class="text-sm font-medium">6 taps</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600">Runtime Today</span>
            <span class="text-sm font-medium">8.5 hours</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600">Efficiency</span>
            <span class="text-sm font-medium text-green-600">94%</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <SectionCard title="Troubleshooting" id="troubleshooting">
    <TroubleshootingDropdown issues={troubleshootingIssues} />
    
    <div class="mt-6">
      <h4 class="font-bold mb-3">System Alerts:</h4>
      <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
        <div class="flex items-start space-x-3">
          <div class="text-yellow-600 text-lg">‚ö†Ô∏è</div>
          <div>
            <div class="font-medium text-yellow-900">Glycol Level Check Due</div>
            <div class="text-sm text-yellow-700 mt-1">Check and top off glycol reservoir monthly</div>
          </div>
        </div>
      </div>
    </div>
  </SectionCard>

  <SectionCard title="Wiring Diagram">
    <div class="bg-white p-4 rounded-lg border border-slate-200 overflow-hidden">
      <div class="w-full max-w-4xl mx-auto">
        <img src="/diagrams/perlick-lowboys.svg" alt="Perlick low boy glycol chiller wiring diagram showing pump, compressor, controls, and glycol circulation system" class="w-full h-auto rounded" style="max-height: 500px; object-fit: contain;" />
      </div>
      <div class="mt-4 text-sm text-slate-600">
        <p class="font-medium mb-2">System Specifications:</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p>‚Ä¢ <span class="font-medium">Power:</span> 115V AC, 60Hz, 1Ph</p>
            <p>‚Ä¢ <span class="font-medium">Compressor:</span> 1/3 HP hermetic</p>
            <p>‚Ä¢ <span class="font-medium">Pump:</span> 1/20 HP glycol circulation</p>
          </div>
          <div>
            <p>‚Ä¢ <span class="font-medium">Capacity:</span> Up to 8 taps</p>
            <p>‚Ä¢ <span class="font-medium">Glycol:</span> Propylene glycol 35-40%</p>
            <p>‚Ä¢ <span class="font-medium">Temperature:</span> 28-32¬∞F</p>
          </div>
        </div>
      </div>
    </div>
  </SectionCard>

  <!-- Quick Actions -->
  <div class="bg-gradient-to-r from-amber-50 to-orange-50 rounded-xl p-6 border border-amber-200">
    <h3 class="text-lg font-semibold text-slate-900 mb-4">Quick Actions</h3>
    <div class="flex flex-wrap gap-3">
      <button class="px-4 py-2 bg-amber-600 text-white rounded-lg hover:bg-amber-700 transition-colors text-sm font-medium">
        üìä View Performance
      </button>
      <button class="px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors text-sm font-medium">
        üîß Schedule Service
      </button>
      <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
        üß™ Check Glycol
      </button>
      <button class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium">
        üìà System Report
      </button>
    </div>
  </div>
</BaseLayout>

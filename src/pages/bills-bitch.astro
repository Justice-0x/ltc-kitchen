---
import BaseLayout from "../layouts/BaseLayout.astro";
import QRUnlock from "../components/QRUnlock.jsx";
---

<BaseLayout>
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-600 rounded-xl flex items-center justify-center text-3xl">
        ✨
      </div>
      <div>
        <h1 class="text-4xl font-bold text-purple-600">Bill's Bitch</h1>
        <p class="text-lg text-gray-600">Private AI Assistant & Advanced Kitchen Management</p>
      </div>
    </div>
    
    <!-- Status Badge -->
    <div class="flex items-center space-x-4">
      <span class="px-4 py-2 bg-purple-100 text-purple-800 rounded-full text-sm font-medium">
        🔒 Restricted Access
      </span>
      <span class="text-sm text-gray-600">QR Code Required</span>
    </div>
  </div>

  <!-- QR Scanner Section -->
  <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
    <QRUnlock client:load />
  </div>

  <!-- Features Preview -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-lg p-6 border border-purple-200">
      <div class="text-3xl mb-3">🤖</div>
      <h3 class="text-lg font-semibold text-purple-900 mb-2">AI Assistant</h3>
      <p class="text-purple-700 text-sm">Advanced AI-powered kitchen management and optimization</p>
    </div>
    
    <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-lg p-6 border border-blue-200">
      <div class="text-3xl mb-3">📊</div>
      <h3 class="text-lg font-semibold text-blue-900 mb-2">Analytics</h3>
      <p class="text-blue-700 text-sm">Real-time data analysis and predictive insights</p>
    </div>
    
    <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-lg p-6 border border-green-200">
      <div class="text-3xl mb-3">⚡</div>
      <h3 class="text-lg font-semibold text-green-900 mb-2">Automation</h3>
      <p class="text-green-700 text-sm">Automated workflows and smart scheduling</p>
    </div>
  </div>

  <!-- Security Notice -->
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <div class="flex items-start">
      <div class="text-yellow-600 text-xl mr-3">⚠️</div>
      <div>
        <h4 class="font-semibold text-yellow-900">Security Notice</h4>
        <p class="text-yellow-800 text-sm mt-1">
          This section contains sensitive AI assistant features. Access is restricted to authorized personnel only. 
          QR code scanning is required for security compliance.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>

---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="min-h-screen py-10 px-4 md:px-8 bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 dark:from-slate-900 dark:via-blue-900 dark:to-indigo-900 light:from-gray-100 light:via-blue-50 light:to-white spooky:from-purple-900 spooky:via-gray-900 spooky:to-black">
    <div class="max-w-7xl mx-auto">
      <div class="mb-6 text-center">
        <h1 class="text-4xl font-extrabold text-white light:text-gray-800 spooky:text-orange-300">Admin Portal</h1>
        <p class="text-blue-200 light:text-gray-600">Equipment data management and system configuration</p>
      </div>
      
      <!-- Admin Dashboard Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- Equipment Management -->
        <div class="bg-white/10 dark:bg-white/10 light:bg-white/80 spooky:bg-gray-800/80 backdrop-blur-md border border-white/20 light:border-gray-200/50 spooky:border-orange-500/30 rounded-2xl p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center text-2xl mr-4">🔧</div>
            <h3 class="text-xl font-bold text-white light:text-gray-800 spooky:text-orange-300">Equipment Management</h3>
          </div>
          <p class="text-gray-300 light:text-gray-600 mb-4">Add, edit, and manage equipment data</p>
          <div class="space-y-2">
            <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
              Add New Equipment
            </button>
            <button class="w-full px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
              Edit Existing Equipment
            </button>
            <button class="w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
              Import Equipment Data
            </button>
          </div>
        </div>

        <!-- Parts Management -->
        <div class="bg-white/10 dark:bg-white/10 light:bg-white/80 spooky:bg-gray-800/80 backdrop-blur-md border border-white/20 light:border-gray-200/50 spooky:border-orange-500/30 rounded-2xl p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center text-2xl mr-4">📦</div>
            <h3 class="text-xl font-bold text-white light:text-gray-800 spooky:text-orange-300">Parts Management</h3>
          </div>
          <p class="text-gray-300 light:text-gray-600 mb-4">Manage parts catalog and pricing</p>
          <div class="space-y-2">
            <button class="w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
              Update Parts Catalog
            </button>
            <button class="w-full px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition-colors">
              Sync Supplier Prices
            </button>
            <button class="w-full px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
              Manage Cross-References
            </button>
          </div>
        </div>

        <!-- Manuals & Documentation -->
        <div class="bg-white/10 dark:bg-white/10 light:bg-white/80 spooky:bg-gray-800/80 backdrop-blur-md border border-white/20 light:border-gray-200/50 spooky:border-orange-500/30 rounded-2xl p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center text-2xl mr-4">📚</div>
            <h3 class="text-xl font-bold text-white light:text-gray-800 spooky:text-orange-300">Documentation</h3>
          </div>
          <p class="text-gray-300 light:text-gray-600 mb-4">Upload and manage manuals</p>
          <div class="space-y-2">
            <button class="w-full px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
              Upload New Manuals
            </button>
            <button class="w-full px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
              Update Manual Metadata
            </button>
            <button class="w-full px-4 py-2 bg-pink-600 text-white rounded-lg hover:bg-pink-700 transition-colors">
              Generate Documentation
            </button>
          </div>
        </div>

        <!-- User Management -->
        <div class="bg-white/10 dark:bg-white/10 light:bg-white/80 spooky:bg-gray-800/80 backdrop-blur-md border border-white/20 light:border-gray-200/50 spooky:border-orange-500/30 rounded-2xl p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center text-2xl mr-4">👥</div>
            <h3 class="text-xl font-bold text-white light:text-gray-800 spooky:text-orange-300">User Management</h3>
          </div>
          <p class="text-gray-300 light:text-gray-600 mb-4">Manage user access and permissions</p>
          <div class="space-y-2">
            <button class="w-full px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors">
              Add New Users
            </button>
            <button class="w-full px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
              Manage Permissions
            </button>
            <button class="w-full px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
              View Activity Logs
            </button>
          </div>
        </div>

        <!-- System Configuration -->
        <div class="bg-white/10 dark:bg-white/10 light:bg-white/80 spooky:bg-gray-800/80 backdrop-blur-md border border-white/20 light:border-gray-200/50 spooky:border-orange-500/30 rounded-2xl p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-cyan-500 rounded-lg flex items-center justify-center text-2xl mr-4">⚙️</div>
            <h3 class="text-xl font-bold text-white light:text-gray-800 spooky:text-orange-300">System Config</h3>
          </div>
          <p class="text-gray-300 light:text-gray-600 mb-4">Configure system settings</p>
          <div class="space-y-2">
            <button class="w-full px-4 py-2 bg-cyan-600 text-white rounded-lg hover:bg-cyan-700 transition-colors">
              API Configuration
            </button>
            <button class="w-full px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors">
              Backup Settings
            </button>
            <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
              System Health
            </button>
          </div>
        </div>

        <!-- Analytics & Reports -->
        <div class="bg-white/10 dark:bg-white/10 light:bg-white/80 spooky:bg-gray-800/80 backdrop-blur-md border border-white/20 light:border-gray-200/50 spooky:border-orange-500/30 rounded-2xl p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-emerald-500 rounded-lg flex items-center justify-center text-2xl mr-4">📊</div>
            <h3 class="text-xl font-bold text-white light:text-gray-800 spooky:text-orange-300">Analytics</h3>
          </div>
          <p class="text-gray-300 light:text-gray-600 mb-4">View usage and performance data</p>
          <div class="space-y-2">
            <button class="w-full px-4 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-colors">
              Usage Reports
            </button>
            <button class="w-full px-4 py-2 bg-lime-600 text-white rounded-lg hover:bg-lime-700 transition-colors">
              Performance Metrics
            </button>
            <button class="w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
              Export Data
            </button>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white/10 dark:bg-white/10 light:bg-white/80 spooky:bg-gray-800/80 backdrop-blur-md border border-white/20 light:border-gray-200/50 spooky:border-orange-500/30 rounded-2xl p-6">
        <h2 class="text-2xl font-bold text-white light:text-gray-800 spooky:text-orange-300 mb-6">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <button class="p-4 bg-blue-500/20 hover:bg-blue-500/30 rounded-lg border border-blue-400/30 transition-colors">
            <div class="text-2xl mb-2">📤</div>
            <div class="text-sm font-medium text-white">Bulk Upload</div>
            <div class="text-xs text-gray-300">Upload multiple files</div>
          </button>
          <button class="p-4 bg-green-500/20 hover:bg-green-500/30 rounded-lg border border-green-400/30 transition-colors">
            <div class="text-2xl mb-2">🔄</div>
            <div class="text-sm font-medium text-white">Sync Data</div>
            <div class="text-xs text-gray-300">Update from sources</div>
          </button>
          <button class="p-4 bg-purple-500/20 hover:bg-purple-500/30 rounded-lg border border-purple-400/30 transition-colors">
            <div class="text-2xl mb-2">🔍</div>
            <div class="text-sm font-medium text-white">Search & Replace</div>
            <div class="text-xs text-gray-300">Bulk edit data</div>
          </button>
          <button class="p-4 bg-red-500/20 hover:bg-red-500/30 rounded-lg border border-red-400/30 transition-colors">
            <div class="text-2xl mb-2">🗑️</div>
            <div class="text-sm font-medium text-white">Cleanup</div>
            <div class="text-xs text-gray-300">Remove old data</div>
          </button>
        </div>
      </div>

      <!-- System Status -->
      <div class="mt-8 bg-white/10 dark:bg-white/10 light:bg-white/80 spooky:bg-gray-800/80 backdrop-blur-md border border-white/20 light:border-gray-200/50 spooky:border-orange-500/30 rounded-2xl p-6">
        <h2 class="text-2xl font-bold text-white light:text-gray-800 spooky:text-orange-300 mb-4">System Status</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="flex items-center justify-between p-4 bg-green-500/20 rounded-lg border border-green-400/30">
            <div>
              <div class="text-sm font-medium text-white">Database</div>
              <div class="text-xs text-gray-300">Connected</div>
            </div>
            <div class="w-3 h-3 bg-green-400 rounded-full"></div>
          </div>
          <div class="flex items-center justify-between p-4 bg-green-500/20 rounded-lg border border-green-400/30">
            <div>
              <div class="text-sm font-medium text-white">API Services</div>
              <div class="text-xs text-gray-300">Online</div>
            </div>
            <div class="w-3 h-3 bg-green-400 rounded-full"></div>
          </div>
          <div class="flex items-center justify-between p-4 bg-yellow-500/20 rounded-lg border border-yellow-400/30">
            <div>
              <div class="text-sm font-medium text-white">File Storage</div>
              <div class="text-xs text-gray-300">85% Used</div>
            </div>
            <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

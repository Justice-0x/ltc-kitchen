---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="min-h-screen p-8">
    <h1 class="text-4xl font-bold mb-8">Theme Test Page</h1>
    
    <div class="space-y-4">
      <button id="test-theme-btn" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
        Test Theme Toggle
      </button>
      
      <div id="theme-info" class="p-4 bg-gray-100 dark:bg-gray-800 rounded-lg">
        <p>Current theme: <span id="current-theme">loading...</span></p>
        <p>Body classes: <span id="body-classes">loading...</span></p>
        <p>Data theme: <span id="data-theme">loading...</span></p>
      </div>
      
      <div class="grid grid-cols-3 gap-4">
        <div class="p-4 bg-white dark:bg-gray-800 spooky:bg-gray-700 border border-gray-300 dark:border-gray-600 spooky:border-orange-500 rounded-lg">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-white spooky:text-orange-300">Test Card 1</h3>
          <p class="text-gray-600 dark:text-gray-300 spooky:text-orange-200">This should change colors with themes</p>
        </div>
        
        <div class="p-4 bg-white dark:bg-gray-800 spooky:bg-gray-700 border border-gray-300 dark:border-gray-600 spooky:border-orange-500 rounded-lg">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-white spooky:text-orange-300">Test Card 2</h3>
          <p class="text-gray-600 dark:text-gray-300 spooky:text-orange-200">This should change colors with themes</p>
        </div>
        
        <div class="p-4 bg-white dark:bg-gray-800 spooky:bg-gray-700 border border-gray-300 dark:border-gray-600 spooky:border-orange-500 rounded-lg">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-white spooky:text-orange-300">Test Card 3</h3>
          <p class="text-gray-600 dark:text-gray-300 spooky:text-orange-200">This should change colors with themes</p>
        </div>
      </div>
    </div>
  </div>

  <script>
    function updateThemeInfo() {
      const currentTheme = localStorage.getItem('theme') || 'dark';
      const bodyClasses = document.body.className;
      const dataTheme = document.documentElement.getAttribute('data-theme');
      
      document.getElementById('current-theme').textContent = currentTheme;
      document.getElementById('body-classes').textContent = bodyClasses;
      document.getElementById('data-theme').textContent = dataTheme;
    }
    
    function testThemeToggle() {
      const order = ['dark', 'light', 'spooky'];
      const currentTheme = localStorage.getItem('theme') || 'dark';
      const idx = order.indexOf(currentTheme);
      const nextTheme = order[(idx + 1) % order.length];
      
      console.log('Test theme toggle:', { currentTheme, nextTheme, idx });
      
      // Apply theme changes
      document.documentElement.setAttribute('data-theme', nextTheme);
      document.body.classList.remove('light', 'dark', 'spooky');
      document.body.classList.add(nextTheme);
      localStorage.setItem('theme', nextTheme);
      
      // Force refresh
      document.body.style.display = 'none';
      document.body.offsetHeight;
      document.body.style.display = '';
      
      updateThemeInfo();
      alert(`Theme changed to: ${nextTheme}`);
    }
    
    document.addEventListener('DOMContentLoaded', function() {
      updateThemeInfo();
      
      document.getElementById('test-theme-btn').addEventListener('click', testThemeToggle);
    });
  </script>
</BaseLayout>

---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <h1 class="text-3xl font-bold mb-6">🍹 Margaritaville Kitchen Dashboard</h1>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <a href="/equipment" class="bg-blue-500 hover:bg-blue-600 text-white p-6 rounded-lg shadow-md transition-colors">
      <h2 class="text-xl font-bold mb-2">📋 Equipment Directory</h2>
      <p class="text-blue-100">View all equipment with search and filtering</p>
    </a>
    
    <a href="/perlick" class="bg-green-500 hover:bg-green-600 text-white p-6 rounded-lg shadow-md transition-colors">
      <h2 class="text-xl font-bold mb-2">🍺 Perlick Systems</h2>
      <p class="text-green-100">Beer dispensing and cooling</p>
    </a>
    
    <a href="/turbochef" class="bg-orange-500 hover:bg-orange-600 text-white p-6 rounded-lg shadow-md transition-colors">
      <h2 class="text-xl font-bold mb-2">🔥 TurboChef</h2>
      <p class="text-orange-100">High-speed convection oven</p>
    </a>
  </div>

  <!-- Equipment Status Overview -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold mb-4">Equipment Status Overview</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="text-center p-4 bg-green-50 rounded-lg">
        <div class="text-3xl font-bold text-green-600">8</div>
        <div class="text-green-800">Operational</div>
      </div>
      <div class="text-center p-4 bg-yellow-50 rounded-lg">
        <div class="text-3xl font-bold text-yellow-600">1</div>
        <div class="text-yellow-800">Maintenance</div>
      </div>
      <div class="text-center p-4 bg-red-50 rounded-lg">
        <div class="text-3xl font-bold text-red-600">0</div>
        <div class="text-red-800">Out of Service</div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="mt-8 bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold mb-4">Recent Activity</h2>
    <div class="space-y-3">
      <div class="flex items-center p-3 bg-gray-50 rounded-lg">
        <span class="text-2xl mr-3">🍦</span>
        <div>
          <div class="font-medium">Frosty maintenance scheduled</div>
          <div class="text-sm text-gray-600">Due: February 10, 2024</div>
        </div>
      </div>
      <div class="flex items-center p-3 bg-gray-50 rounded-lg">
        <span class="text-2xl mr-3">🍺</span>
        <div>
          <div class="font-medium">Perlick system updated</div>
          <div class="text-sm text-gray-600">January 15, 2024</div>
        </div>
      </div>
      <div class="flex items-center p-3 bg-gray-50 rounded-lg">
        <span class="text-2xl mr-3">🔥</span>
        <div>
          <div class="font-medium">TurboChef calibration completed</div>
          <div class="text-sm text-gray-600">January 20, 2024</div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

---
import BaseLayout from "../layouts/BaseLayout.astro";
import StatusIndicator from "../components/StatusIndicator.jsx";
---

<BaseLayout>
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-gray-900 to-black relative overflow-hidden">
    
    <!-- King Kong Style Searchlights -->
    <div class="absolute inset-0 overflow-hidden">
      <!-- Searchlight 1 - Yellow -->
      <div class="absolute top-1/4 w-96 h-96 bg-gradient-radial from-yellow-400/40 via-yellow-300/25 to-transparent rounded-full animate-spotlight-1 blur-2xl"></div>
      
      <!-- Searchlight 2 - White -->
      <div class="absolute top-1/3 w-80 h-80 bg-gradient-radial from-white/35 via-white/20 to-transparent rounded-full animate-spotlight-2 blur-2xl"></div>
      
      <!-- Searchlight 3 - Blue -->
      <div class="absolute bottom-1/4 w-72 h-72 bg-gradient-radial from-blue-400/30 via-blue-300/15 to-transparent rounded-full animate-spotlight-3 blur-2xl"></div>
      
      <!-- Searchlight 4 - White -->
      <div class="absolute top-1/2 w-64 h-64 bg-gradient-radial from-white/25 via-white/10 to-transparent rounded-full animate-spotlight-4 blur-2xl"></div>
      
      <!-- Floating Particles -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-white/30 rounded-full animate-float-1"></div>
        <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-blue-300/40 rounded-full animate-float-2"></div>
        <div class="absolute bottom-1/3 left-1/2 w-1.5 h-1.5 bg-yellow-300/35 rounded-full animate-float-3"></div>
        <div class="absolute top-2/3 right-1/2 w-1 h-1 bg-purple-300/30 rounded-full animate-float-4"></div>
        <div class="absolute bottom-1/4 right-1/4 w-2 h-2 bg-cyan-300/25 rounded-full animate-float-5"></div>
      </div>
      
      <!-- Subtle Grid Overlay -->
      <div class="absolute inset-0 bg-gradient-to-br from-transparent via-slate-800/5 to-transparent" style="background-image: linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <!-- Main Content -->
    <div class="relative z-10 container mx-auto px-6 py-12">
      
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <div class="mb-8">
          <div class="text-8xl mb-4 drop-shadow-2xl">🏝️</div>
          <h1 class="text-6xl md:text-8xl font-black text-white mb-4 bg-gradient-to-r from-yellow-400 via-orange-300 to-red-400 bg-clip-text text-transparent drop-shadow-2xl">
            Margaritaville Kitchen
          </h1>
          <p class="text-2xl text-cyan-200 mb-6 font-light drop-shadow-lg">Real-time Equipment Management Dashboard</p>
          <div class="inline-flex items-center bg-gradient-to-r from-slate-800/40 to-slate-700/40 backdrop-blur-md border border-white/20 rounded-full px-6 py-3 text-white shadow-2xl">
            <div class="w-3 h-3 bg-green-400 rounded-full mr-3 animate-pulse shadow-lg"></div>
            <span class="font-semibold">Operational</span>
            <span class="ml-2 text-sm font-mono" id="current-time"></span>
          </div>
        </div>
      </div>

      <!-- Stats Cards with Movie Theme -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-16">
        <div class="bg-gradient-to-br from-slate-800/40 to-slate-700/40 backdrop-blur-md border border-white/10 rounded-2xl p-6 text-center hover:bg-slate-700/50 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-white/10">
          <div class="text-5xl font-bold text-yellow-400 mb-2 drop-shadow-lg">4</div>
          <div class="text-white font-medium">Total Equipment</div>
          <div class="text-white/60 text-sm mt-1">Kitchen & Bar Systems</div>
        </div>
        
        <div class="bg-gradient-to-br from-slate-800/40 to-slate-700/40 backdrop-blur-md border border-white/10 rounded-2xl p-6 text-center hover:bg-slate-700/50 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-white/10">
          <div class="text-5xl font-bold text-green-400 mb-2 drop-shadow-lg">2</div>
          <div class="text-white font-medium">Operational</div>
          <div class="text-white/60 text-sm mt-1">Running Smoothly</div>
        </div>
        
        <div class="bg-gradient-to-br from-slate-800/40 to-slate-700/40 backdrop-blur-md border border-white/10 rounded-2xl p-6 text-center hover:bg-slate-700/50 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-white/10">
          <div class="text-5xl font-bold text-orange-400 mb-2 drop-shadow-lg">2</div>
          <div class="text-white font-medium">Needs Attention</div>
          <div class="text-white/60 text-sm mt-1">Scheduled Maintenance</div>
        </div>
        
        <div class="bg-gradient-to-br from-slate-800/40 to-slate-700/40 backdrop-blur-md border border-white/10 rounded-2xl p-6 text-center hover:bg-slate-700/50 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-white/10">
          <div class="text-5xl font-bold text-blue-400 mb-2 drop-shadow-lg">95%</div>
          <div class="text-white font-medium">Avg Uptime</div>
          <div class="text-white/60 text-sm mt-1">This Month</div>
        </div>
      </div>

      <!-- Quick Actions with Tropical Icons -->
      <div class="mb-16">
        <h2 class="text-4xl font-bold text-white mb-12 text-center bg-gradient-to-r from-cyan-300 to-teal-400 bg-clip-text text-transparent">
          Quick Actions
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <a href="/equipment" class="group bg-gradient-to-br from-cyan-500/20 to-teal-500/20 backdrop-blur-md border border-cyan-300/30 rounded-2xl p-8 hover:bg-cyan-500/30 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-cyan-500/25">
            <div class="text-6xl mb-4 group-hover:scale-110 transition-transform">🍽️</div>
            <h3 class="text-2xl font-bold text-white mb-2">Equipment</h3>
            <p class="text-cyan-200">Manage all kitchen equipment</p>
            <div class="mt-4 text-cyan-300/60 text-sm">View & Control →</div>
          </a>
          
          <a href="/monitoring" class="group bg-gradient-to-br from-emerald-500/20 to-green-500/20 backdrop-blur-md border border-emerald-300/30 rounded-2xl p-8 hover:bg-emerald-500/30 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-emerald-500/25">
            <div class="text-6xl mb-4 group-hover:scale-110 transition-transform">📊</div>
            <h3 class="text-2xl font-bold text-white mb-2">Monitoring</h3>
            <p class="text-emerald-200">Real-time equipment status</p>
            <div class="mt-4 text-emerald-300/60 text-sm">Live Data →</div>
          </a>
          
          <a href="/contact" class="group bg-gradient-to-br from-coral-500/20 to-orange-500/20 backdrop-blur-md border border-coral-300/30 rounded-2xl p-8 hover:bg-coral-500/30 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-coral-500/25">
            <div class="text-6xl mb-4 group-hover:scale-110 transition-transform">📞</div>
            <h3 class="text-2xl font-bold text-white mb-2">Contact</h3>
            <p class="text-coral-200">Get support and assistance</p>
            <div class="mt-4 text-coral-300/60 text-sm">Get Help →</div>
          </a>
          
          <a href="/bills-bitch" class="group bg-gradient-to-br from-purple-500/20 to-pink-500/20 backdrop-blur-md border border-purple-300/30 rounded-2xl p-8 hover:bg-purple-500/30 transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-purple-500/25">
            <div class="text-6xl mb-4 group-hover:scale-110 transition-transform">✨</div>
            <h3 class="text-2xl font-bold text-white mb-2">Bills Bitch</h3>
            <p class="text-purple-200">Private AI Assistant</p>
            <div class="mt-4 text-purple-300/60 text-sm">AI Support →</div>
          </a>
        </div>
      </div>

      <!-- Premium Maintenance System -->
      <div class="bg-gradient-to-r from-amber-500/10 to-orange-500/10 backdrop-blur-md border border-amber-300/20 rounded-2xl p-8 mb-16">
        <div class="text-center mb-8">
          <div class="text-6xl mb-4">🔧</div>
          <h3 class="text-3xl font-bold text-white mb-4">Smart Maintenance System</h3>
          <div class="inline-flex items-center bg-gradient-to-r from-amber-500/20 to-orange-500/20 border border-amber-400/30 rounded-full px-6 py-3 text-amber-200 mb-4">
            <span class="text-2xl mr-2">⭐</span>
            <span class="font-semibold">Premium Feature</span>
          </div>
          <p class="text-amber-200 text-lg">Predictive maintenance powered by AI</p>
        </div>

        <!-- Features Preview -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-gradient-to-br from-amber-500/20 to-orange-500/20 backdrop-blur-md border border-amber-300/30 rounded-xl p-6 text-center hover:bg-amber-500/30 transition-all duration-300 transform hover:scale-105">
            <div class="text-4xl mb-4">🤖</div>
            <h4 class="text-xl font-bold text-white mb-2">AI Predictions</h4>
            <p class="text-amber-200 text-sm">Machine learning algorithms predict equipment failures before they happen</p>
            <div class="mt-4 text-amber-300/60 text-xs">Premium Feature</div>
          </div>
          
          <div class="bg-gradient-to-br from-amber-500/20 to-orange-500/20 backdrop-blur-md border border-amber-300/30 rounded-xl p-6 text-center hover:bg-amber-500/30 transition-all duration-300 transform hover:scale-105">
            <div class="text-4xl mb-4">📊</div>
            <h4 class="text-xl font-bold text-white mb-2">Real-time Monitoring</h4>
            <p class="text-amber-200 text-sm">Live equipment status with instant alerts and notifications</p>
            <div class="mt-4 text-amber-300/60 text-xs">Premium Feature</div>
          </div>
          
          <div class="bg-gradient-to-br from-amber-500/20 to-orange-500/20 backdrop-blur-md border border-amber-300/30 rounded-xl p-6 text-center hover:bg-amber-500/30 transition-all duration-300 transform hover:scale-105">
            <div class="text-4xl mb-4">📱</div>
            <h4 class="text-xl font-bold text-white mb-2">Mobile Alerts</h4>
            <p class="text-amber-200 text-sm">Get instant notifications on your phone when maintenance is needed</p>
            <div class="mt-4 text-amber-300/60 text-xs">Premium Feature</div>
          </div>
        </div>

        <!-- Current Equipment Status (Basic) -->
        <div class="bg-white/5 rounded-xl p-6">
          <h4 class="text-xl font-bold text-white mb-4 text-center">🏖️ Current Equipment Status</h4>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="flex items-center space-x-4 p-4 bg-green-500/10 rounded-lg border border-green-400/20">
              <div class="text-3xl">🧊</div>
              <div>
                <div class="text-white font-semibold">Hoshizaki Ice Maker</div>
                <div class="text-green-400 text-sm">✓ Operational</div>
              </div>
            </div>
            <div class="flex items-center space-x-4 p-4 bg-green-500/10 rounded-lg border border-green-400/20">
              <div class="text-3xl">🍺</div>
              <div>
                <div class="text-white font-semibold">Perlick Glycol Chiller</div>
                <div class="text-green-400 text-sm">✓ Operational</div>
              </div>
            </div>
            <div class="flex items-center space-x-4 p-4 bg-amber-500/10 rounded-lg border border-amber-400/20">
              <div class="text-3xl">🔥</div>
              <div>
                <div class="text-white font-semibold">TurboChef Oven</div>
                <div class="text-amber-400 text-sm">⚠ Maintenance Due</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Upgrade CTA -->
        <div class="text-center mt-8">
          <div class="bg-gradient-to-r from-amber-500/20 to-orange-500/20 border border-amber-400/30 rounded-xl p-6">
            <div class="text-4xl mb-4">🚀</div>
            <h4 class="text-2xl font-bold text-white mb-2">Upgrade to Premium</h4>
            <p class="text-amber-200 mb-4">Get access to our advanced maintenance system with AI predictions, real-time monitoring, and mobile alerts.</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
              <div class="text-3xl font-bold text-amber-300">$99/month</div>
              <button class="px-8 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-full font-bold hover:from-amber-600 hover:to-orange-600 transition-all duration-300 transform hover:scale-105 shadow-lg">
                Contact Sales
              </button>
            </div>
            <div class="text-amber-300/60 text-sm mt-4">Contact support@myguy.dev for pricing and early access</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Update current time
    function updateTime() {
      const now = new Date();
      const timeString = now.toLocaleTimeString('en-US', { 
        hour: '2-digit', 
        minute: '2-digit', 
        second: '2-digit',
        hour12: true 
      });
      const timeElement = document.getElementById('current-time');
      if (timeElement) {
        timeElement.textContent = timeString;
      }
    }
    
    updateTime();
    setInterval(updateTime, 1000);
  </script>

  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    
    @keyframes wave {
      0%, 100% { transform: translateX(0px); }
      50% { transform: translateX(10px); }
    }
    
    .animate-float { animation: float 3s ease-in-out infinite; }
    .animate-wave { animation: wave 2s ease-in-out infinite; }
    .animation-delay-1000 { animation-delay: 1s; }
    .animation-delay-2000 { animation-delay: 2s; }
  </style>
</BaseLayout>
---
import BaseLayout from "../layouts/BaseLayout.astro";
import DocsButtons from "../components/DocsButtons.astro";
import SectionCard from "../components/SectionCard.astro";

const status = "operational";
const currentTemp = 350;
const setpoint = 350;
const burners = [
  { id: 1, status: "active", flame: "blue", temp: 350 },
  { id: 2, status: "idle", flame: "blue", temp: 0 },
  { id: 3, status: "active", flame: "blue", temp: 375 },
  { id: 4, status: "idle", flame: "blue", temp: 0 }
];
const lastMaintenance = "2024-01-18";
const nextMaintenance = "2024-04-18";
---

<BaseLayout>
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-600 rounded-xl flex items-center justify-center text-3xl">
        üç≥
      </div>
      <div>
        <h1 class="text-4xl font-bold text-slate-900">Southbend Commercial Range</h1>
        <p class="text-lg text-slate-600">Professional gas range and griddle system</p>
      </div>
    </div>
    
    <!-- Status Badge -->
    <div class="flex items-center space-x-4">
      <span class="px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-medium">
        ‚úÖ Operational
      </span>
      <span class="text-sm text-slate-600">Last updated: {new Date().toLocaleTimeString()}</span>
    </div>
  </div>

  <DocsButtons id="southbend" />

  <!-- Main Dashboard Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    <!-- Temperature Status -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
        <h2 class="text-2xl font-bold text-slate-900 mb-6 flex items-center">
          <span class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center mr-3">üå°Ô∏è</span>
          Temperature Control
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="text-center">
            <div class="text-4xl font-bold text-orange-600 mb-2">{currentTemp}¬∞F</div>
            <div class="text-sm text-slate-600">Current Temperature</div>
            <div class="w-full bg-slate-200 rounded-full h-2 mt-3">
              <div class="bg-orange-600 h-2 rounded-full" style="width: 70%"></div>
            </div>
          </div>
          
          <div class="space-y-4">
            <div class="flex justify-between items-center p-3 bg-slate-50 rounded-lg">
              <span class="text-slate-600">Setpoint</span>
              <span class="font-semibold text-slate-900">{setpoint}¬∞F</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-slate-50 rounded-lg">
              <span class="text-slate-600">Gas Pressure</span>
              <span class="font-semibold text-slate-900">7.5" WC</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-slate-50 rounded-lg">
              <span class="text-slate-600">Pilot Status</span>
              <span class="font-semibold text-green-600">Lit</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- System Status -->
    <div class="space-y-6">
      <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">System Status</h3>
        <div class="space-y-3">
          <div class="flex items-center justify-between">
            <span class="text-slate-600">Gas Supply</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Normal</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-600">Safety Valves</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">OK</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-600">Thermostat</span>
            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Calibrated</span>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">Maintenance</h3>
        <div class="space-y-3">
          <div>
            <div class="text-sm text-slate-600">Last Service</div>
            <div class="font-medium text-slate-900">{lastMaintenance}</div>
          </div>
          <div>
            <div class="text-sm text-slate-600">Next Service</div>
            <div class="font-medium text-slate-900">{nextMaintenance}</div>
          </div>
          <div class="pt-2">
            <div class="w-full bg-slate-200 rounded-full h-2">
              <div class="bg-orange-600 h-2 rounded-full" style="width: 60%"></div>
            </div>
            <div class="text-xs text-slate-600 mt-1">60% to next service</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Burner Status -->
  <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200 mb-8">
    <h3 class="text-2xl font-bold text-slate-900 mb-6 flex items-center">
      <span class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">üî•</span>
      Burner Status
    </h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      {burners.map((burner) => (
        <div class={`p-4 rounded-lg border-2 ${burner.status === 'active' ? 'bg-orange-50 border-orange-200' : 'bg-slate-50 border-slate-200'}`}>
          <div class="flex items-center justify-between mb-2">
            <span class="font-bold text-lg">Burner {burner.id}</span>
            <span class={`px-2 py-1 rounded text-xs font-medium ${
              burner.status === 'active' ? 'bg-orange-100 text-orange-800' : 'bg-slate-100 text-slate-600'
            }`}>
              {burner.status}
            </span>
          </div>
          <div class="text-sm text-slate-600">
            <div>Flame: <span class="font-medium">{burner.flame}</span></div>
            <div>Temp: <span class="font-medium">{burner.temp}¬∞F</span></div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Service Guide -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
      <h3 class="text-xl font-bold text-slate-900 mb-4 flex items-center">
        <span class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-3">üîß</span>
        Daily Maintenance
      </h3>
      <div class="space-y-4">
        <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
          <div class="font-medium text-green-900 mb-2">Burner Inspection</div>
          <ul class="text-sm text-green-800 space-y-1">
            <li>‚Ä¢ Check for proper flame color (blue with yellow tips)</li>
            <li>‚Ä¢ Ensure even flame distribution</li>
            <li>‚Ä¢ Clean any debris from burner ports</li>
            <li>‚Ä¢ Verify pilot lights are lit</li>
          </ul>
        </div>
        
        <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <div class="font-medium text-blue-900 mb-2">Safety Checks</div>
          <ul class="text-sm text-blue-800 space-y-1">
            <li>‚Ä¢ Test safety shut-off valves</li>
            <li>‚Ä¢ Check gas connections for leaks</li>
            <li>‚Ä¢ Inspect door gaskets and hinges</li>
            <li>‚Ä¢ Verify thermostat accuracy</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200" id="troubleshooting">
      <h3 class="text-xl font-bold text-slate-900 mb-4 flex items-center">
        <span class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center mr-3">‚ö†Ô∏è</span>
        Troubleshooting
      </h3>
      <div class="space-y-4">
        <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
          <div class="font-medium text-red-900 mb-2">Yellow Flame</div>
          <ul class="text-sm text-red-800 space-y-1">
            <li>‚Ä¢ Clean pilot orifices</li>
            <li>‚Ä¢ Check air shutter adjustment</li>
            <li>‚Ä¢ Verify gas pressure</li>
            <li>‚Ä¢ Clean burner ports</li>
          </ul>
        </div>
        
        <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <div class="font-medium text-yellow-900 mb-2">Uneven Heating</div>
          <ul class="text-sm text-yellow-800 space-y-1">
            <li>‚Ä¢ Check burner alignment</li>
            <li>‚Ä¢ Clean burner ports</li>
            <li>‚Ä¢ Verify gas flow</li>
            <li>‚Ä¢ Check for obstructions</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <SectionCard title="Wiring Diagram">
    <img src="/diagrams/southbend.png" alt="Southbend wiring diagram placeholder" class="w-full rounded border" />
  </SectionCard>

  <!-- Quick Actions -->
  <div class="bg-gradient-to-r from-orange-50 to-red-50 rounded-xl p-6 border border-orange-200">
    <h3 class="text-lg font-semibold text-slate-900 mb-4">Quick Actions</h3>
    <div class="flex flex-wrap gap-3">
      <button class="px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors text-sm font-medium">
        üî• Preheat Range
      </button>
      <button class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm font-medium">
        ‚ö†Ô∏è Emergency Shutoff
      </button>
      <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
        üìä View Logs
      </button>
      <button class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium">
        üîß Schedule Service
      </button>
    </div>
  </div>
</BaseLayout>

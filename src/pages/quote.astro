---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Parts Quote - LTC Kitchen" description="Manage your parts quotes and orders">
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-blue-600 rounded-xl flex items-center justify-center text-3xl">
        📋
      </div>
      <div>
        <h1 class="text-3xl font-bold text-slate-900">Parts Quote Management</h1>
        <p class="text-slate-600">Review and manage your parts quotes and orders</p>
      </div>
    </div>
  </div>

  <div id="quoteContainer" class="space-y-6">
    <!-- Quote items will be populated by JavaScript -->
  </div>

  <div class="mt-8 bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl p-6 border border-blue-200">
    <h3 class="text-lg font-semibold text-slate-900 mb-4">📞 Contact Support</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="text-center">
        <div class="text-2xl mb-2">📞</div>
        <div class="font-medium">Phone Support</div>
        <div class="text-sm text-slate-600">1-800-PARTS-24</div>
      </div>
      <div class="text-center">
        <div class="text-2xl mb-2">📧</div>
        <div class="font-medium">Email Quote</div>
        <div class="text-sm text-slate-600">quotes@ltckitchen.com</div>
      </div>
      <div class="text-center">
        <div class="text-2xl mb-2">💬</div>
        <div class="font-medium">Live Chat</div>
        <div class="text-sm text-slate-600">Available 24/7</div>
      </div>
    </div>
  </div>

  <script>
    // Load and display quotes from localStorage
    function loadQuotes() {
      const quotes = JSON.parse(localStorage.getItem('partsQuotes') || '[]');
      const container = document.getElementById('quoteContainer');
      
      if (quotes.length === 0) {
        container.innerHTML = `
          <div class="text-center py-12">
            <div class="text-6xl mb-4">📋</div>
            <h3 class="text-xl font-semibold text-slate-900 mb-2">No Quotes Yet</h3>
            <p class="text-slate-600 mb-4">Start by adding parts to your quote from any equipment page.</p>
            <a href="/equipment" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
              Browse Equipment
            </a>
          </div>
        `;
        return;
      }

      container.innerHTML = quotes.map((quote, index) => `
        <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-lg font-semibold text-slate-900">${quote.part}</h3>
              <p class="text-sm text-slate-600">${quote.equipment} • SKU: ${quote.sku}</p>
            </div>
            <button onclick="removeQuote(${index})" class="text-red-600 hover:text-red-800">
              🗑️ Remove
            </button>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <div>
              <span class="text-sm font-medium text-slate-700">Quantity:</span>
              <span class="ml-2 text-slate-900">${quote.quantity}</span>
            </div>
            <div>
              <span class="text-sm font-medium text-slate-700">Added:</span>
              <span class="ml-2 text-slate-900">${new Date(quote.timestamp).toLocaleDateString()}</span>
            </div>
            <div>
              <span class="text-sm font-medium text-slate-700">Status:</span>
              <span class="ml-2 px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs">Pending</span>
            </div>
          </div>
          
          <div class="flex gap-2">
            <button onclick="requestQuote('${quote.sku}')" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">
              📧 Request Quote
            </button>
            <button onclick="orderNow('${quote.sku}')" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 text-sm">
              🛒 Order Now
            </button>
          </div>
        </div>
      `).join('');
    }

    function removeQuote(index) {
      const quotes = JSON.parse(localStorage.getItem('partsQuotes') || '[]');
      quotes.splice(index, 1);
      localStorage.setItem('partsQuotes', JSON.stringify(quotes));
      loadQuotes();
    }

    function requestQuote(sku) {
      // Open email client with quote request
      const subject = `Parts Quote Request - SKU: ${sku}`;
      const body = `Please provide a quote for the following part:\n\nSKU: ${sku}\n\nThank you!`;
      window.open(`mailto:quotes@ltckitchen.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`);
    }

    function orderNow(sku) {
      // Open PartsTown with the SKU
      window.open(`https://www.partstown.com/search?q=${encodeURIComponent(sku)}`, '_blank');
    }

    // Load quotes when page loads
    loadQuotes();
  </script>
</BaseLayout>

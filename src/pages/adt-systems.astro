---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionCard from "../components/SectionCard.astro";
import TroubleshootingDropdown from "../components/TroubleshootingDropdown.astro";

const troubleshootingIssues = [
  {
    problem: "Communication Failure",
    solutions: [
      "Check network cable connections",
      "Verify IP address settings",
      "Test network switch/router",
      "Reset communication module",
      "Check firewall settings"
    ]
  },
  {
    problem: "Data Not Recording",
    solutions: [
      "Verify sensor connections",
      "Check data logger settings",
      "Test storage device",
      "Calibrate input channels",
      "Reset data acquisition system"
    ]
  },
  {
    problem: "Alarm Notifications Failed",
    solutions: [
      "Check email/SMS settings",
      "Verify contact information",
      "Test notification services",
      "Check alarm thresholds",
      "Reset notification module"
    ]
  }
];
---

<BaseLayout title="ADT Systems - LTC Kitchen" description="ADT monitoring and data acquisition systems">
  <div class="mb-8">

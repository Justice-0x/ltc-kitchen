            <div class="text-sm text-slate-600">Active Sensors</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-purple-600">24/7</div>
            <div class="text-sm text-slate-600">Monitoring</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Real-time Data -->
    <div class="bg-white rounded-xl shadow-lg p-6 border border-slate-200">
      <h3 class="text-lg font-semibold text-slate-900 mb-4">Real-time Data</h3>
      
      <div class="space-y-4">

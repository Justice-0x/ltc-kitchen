---
import BaseLayout from "../layouts/BaseLayout.astro";
import DocsButtons from "../components/DocsButtons.astro";
import SectionCard from "../components/SectionCard.astro";
---

<BaseLayout>
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-xl flex items-center justify-center text-3xl">ðŸ§º</div>
      <div>
        <h1 class="text-4xl font-bold text-slate-100 md:text-slate-900">Laundry Equipment</h1>
        <p class="text-lg text-slate-400 md:text-slate-600">Washers and gas dryers overview</p>
      </div>
    </div>
  </div>

  <DocsButtons id="laundry" />

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <div class="bg-white rounded-xl shadow p-6">
      <h2 class="text-2xl font-bold mb-4">Washer Checklist</h2>
      <ul class="list-disc pl-6 space-y-2 text-slate-700">
        <li>Inspect door seals and hinges weekly</li>
        <li>Clean drain pump filter monthly</li>
        <li>Check suspension and shocks quarterly</li>
        <li>Verify water inlet screens</li>
      </ul>
    </div>
    <div class="bg-white rounded-xl shadow p-6">
      <h2 class="text-2xl font-bold mb-4">Gas Dryer Checklist</h2>
      <ul class="list-disc pl-6 space-y-2 text-slate-700">
        <li>Clean lint traps daily</li>
        <li>Inspect venting and airflow monthly</li>
        <li>Check igniter and flame sensor</li>
        <li>Verify drum belt and rollers</li>
      </ul>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow p-6" id="troubleshooting">
    <h3 class="text-xl font-bold mb-4">Troubleshooting</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <div class="font-medium mb-1">Washer Won't Drain</div>
        <ul class="list-disc pl-6 text-sm">
          <li>Clean drain filter</li>
          <li>Check drain hose for kinks</li>
          <li>Test drain pump</li>
        </ul>
      </div>
      <div>
        <div class="font-medium mb-1">Dryer No Heat</div>
        <ul class="list-disc pl-6 text-sm">
          <li>Check igniter continuity</li>
          <li>Test flame sensor</li>
          <li>Verify gas supply and coils</li>
        </ul>
      </div>
    </div>
  </div>

  <SectionCard title="Wiring Diagram">
    <div class="bg-white p-4 rounded-lg border border-slate-200 overflow-hidden">
      <div class="w-full max-w-4xl mx-auto">
        <img src="/diagrams/laundry.svg" alt="Commercial laundry detailed wiring diagram showing heating elements, motors, pumps, and control systems" class="w-full h-auto rounded" style="max-height: 500px; object-fit: contain;" />
      </div>
      <div class="mt-4 text-sm text-slate-600">
        <p class="font-medium mb-2">System Specifications:</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <p>â€¢ <span class="font-medium">Power:</span> 240V AC, 40A circuit</p>
            <p>â€¢ <span class="font-medium">Heating:</span> 4500W element</p>
            <p>â€¢ <span class="font-medium">Capacity:</span> 50 lbs dry weight</p>
          </div>
          <div>
            <p>â€¢ <span class="font-medium">Motor:</span> 115V AC drive system</p>
            <p>â€¢ <span class="font-medium">Water Pump:</span> 115V AC circulation</p>
            <p>â€¢ <span class="font-medium">Control:</span> Wash cycles & temperature</p>
          </div>
        </div>
      </div>
    </div>
  </SectionCard>
</BaseLayout>

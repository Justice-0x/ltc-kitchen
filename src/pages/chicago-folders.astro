---
import BaseLayout from "../layouts/BaseLayout.astro";
import DocsButtons from "../components/DocsButtons.astro";
import SectionCard from "../components/SectionCard.astro";
---

<BaseLayout>
  <div class="mb-2">
    <div class="sr-only">Docs Buttons</div>
  </div>
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center space-x-4 mb-4">
      <div class="w-16 h-16 bg-gradient-to-br from-slate-500 to-slate-700 rounded-xl flex items-center justify-center text-3xl">ðŸ“„</div>
      <div>
        <h1 class="text-4xl font-bold text-slate-100 md:text-slate-900">Chicago Sheet Folders</h1>
        <p class="text-lg text-slate-400 md:text-slate-600">Commercial folder maintenance and troubleshooting</p>
      </div>
    </div>
  </div>

  <DocsButtons id="chicago-folders" />

  <!-- Dashboard Cards -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    <div class="lg:col-span-2 bg-white rounded-xl shadow p-6">
      <h2 class="text-2xl font-bold mb-4">Maintenance Checklist</h2>
      <ul class="list-disc pl-6 space-y-2 text-slate-700">
        <li>Inspect belts for fraying and tension weekly</li>
        <li>Lube bearings every 200 operating hours</li>
        <li>Inspect folding knives for sharpness and alignment</li>
        <li>Check photo-eyes and interlocks for proper function</li>
      </ul>
    </div>
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-lg font-semibold mb-3">Quick Stats</h3>
      <div class="space-y-2 text-slate-700">
        <div class="flex justify-between"><span>Cycles Today</span><span class="font-medium">1,240</span></div>
        <div class="flex justify-between"><span>Knife Wear</span><span class="font-medium">Normal</span></div>
        <div class="flex justify-between"><span>Belts</span><span class="font-medium">Good</span></div>
      </div>
    </div>
  </div>

  <!-- Troubleshooting -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8" id="troubleshooting">
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-xl font-bold mb-4">Common Issues</h3>
      <div class="space-y-3 text-slate-700">
        <div>
          <div class="font-medium">Skewed Folds</div>
          <ul class="list-disc pl-6 text-sm">
            <li>Check feed table squareness</li>
            <li>Verify belt tension and tracking</li>
            <li>Align guides</li>
          </ul>
        </div>
        <div>
          <div class="font-medium">Wrinkling</div>
          <ul class="list-disc pl-6 text-sm">
            <li>Reduce bite pressure</li>
            <li>Inspect knife edge</li>
            <li>Adjust roller gap</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-xl font-bold mb-4">Quick Actions</h3>
      <div class="flex flex-wrap gap-3">
        <button class="px-4 py-2 bg-blue-600 text-white rounded">View Manual</button>
        <button class="px-4 py-2 bg-green-600 text-white rounded">Schedule Service</button>
        <button class="px-4 py-2 bg-slate-600 text-white rounded">Parts List</button>
      </div>
    </div>
  </div>
  <SectionCard title="Wiring Diagram">
    <img src="/diagrams/chicago-folders.png" alt="Chicago Folders wiring diagram placeholder" class="w-full rounded border" />
  </SectionCard>
</BaseLayout>
